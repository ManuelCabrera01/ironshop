<body>
<ul>
  <% products.forEach((product) => { %>
    <li>
      <%= product.name %> - $<%= product.price %>
      <a href="/products/product-details?id=<%= product._id %>">View Details</a>
    </li>
  <%  }) %>
</ul>

<ul>
  <% products.forEach((product) => { %>
    <li>
      <%= product.name %> - $<%= product.price %>
      <a href="/products/<%= product._id %>">View Details</a>
    </li>
  <%  }) %>
</ul>

<ul>
  <% products.forEach((product) => { %>
    <li>
      <%= product.name %> - $<%= product.price %>
      <a href="/products/<%= product._id %>">View Details</a>
